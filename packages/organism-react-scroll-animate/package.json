{
  "version": "0.16.2",
  "name": "organism-react-scroll-animate",
  "repository": {
    "type": "git",
    "url": "https://github.com/react-atomic/react-atomic-organism",
    "directory": "packages/organism-react-scroll-animate"
  },
  "homepage": "https://github.com/react-atomic/react-atomic-organism/tree/main/packages/organism-react-scroll-animate",
  "description": "React Animate When You Scroll",
  "keywords": [
    "react",
    "react-component",
    "organism",
    "atomic-ui"
  ],
  "author": "Hill <hill@kimo.com>",
  "license": "MIT",
  "dependencies": {
    "call-func": "*",
    "organism-react-animate": "*",
    "organism-react-scroll-nav": "*",
    "react-atomic-molecule": "*"
  },
  "devDependencies": {
    "react": "^18.x",
    "react-dom": "^18.x",
    "reshow-app": "*"
  },
  "exports": {
    "require": "./build/cjs/src/index.js",
    "import": "./build/es/src/index.mjs"
  },
  "main": "./build/cjs/src/index.js",
  "module": "./build/es/src/index.mjs",
  "scripts": {
    "update-compile-sh": "yo reshow:compile-sh",
    "webpack": "webpack",
    "start": "ws",
    "format": "prettier-eslint --write 'src/**/*.js' 'ui/**/*.js*'",
    "clean:webpack": "find ./assets -name '*.*' | xargs rm -rf",
    "clean": "find ./build -name '*.*' | xargs rm -rf",
    "build:cjs": "BABEL_ENV=cjs babel src -d build/cjs/src --ignore /**/__tests__ --root-mode upward",
    "build:es": "BABEL_ENV=es babel src -d build/es/src --out-file-extension .mjs --root-mode upward",
    "build:type": "npx -p typescript tsc src/*.js src/ui/**/*.jsx --jsx react-jsx --declaration --allowJs --emitDeclarationOnly --skipLibCheck --declarationDir types",
    "build": "npm run clean && npm run build:cjs && npm run build:es && npm run build:type",
    "mochaFor": "STRICT_MODE=on mocha -r global-jsdom/register",
    "mocha": "npm run mochaFor -- 'build/es/**/__tests__/*.mjs'",
    "test": "npm run build && npm run mocha",
    "prepublishOnly": "npm run test"
  },
  "types": "./types/index.d.ts",
  "files": [
    "types",
    "build",
    "package.json",
    "README.md"
  ]
}
